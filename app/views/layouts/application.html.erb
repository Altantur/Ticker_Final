<!DOCTYPE html>
<html>
<head>
  <title>Ticker</title>
  <%= stylesheet_link_tag    "custom", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/header'%>

<div class="container">
<div class="row-fluid">
	<div class='col-md-9'>
		<% flash.each do |key,value| %>
        	<div class="alert alert-<%=key %>"><%= value %></div>
		<%end%>
		<%= yield %>
	</div>
	<div class="col-md-3">
		<%= render 'layouts/social'%>
		<%= render 'layouts/rss'%>
	</div>

</div>
</div>

<div class="container">
	<%= render 'layouts/footer'%>
</div>
</body>
</html>